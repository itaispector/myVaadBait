<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/list_item_background" 
    xmlns:android="http://schemas.android.com/apk/res/android">
    
    <TextView 
        android:id="@+id/paymentsDialogTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ועד בית תשלום חודשי"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
    />
    <NumberPicker 
        android:id="@+id/paymentsDialogNumberPicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/paymentsDialogTitle"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:soundEffectsEnabled="true"
        
        />
    <Button 
        android:id="@+id/paymentsDialogConfirmBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="אישור"
        android:layout_below="@id/paymentsDialogNumberPicker"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        />
    <Button 
        android:id="@+id/paymentsDialogCancelBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ביטול"
        android:layout_below="@id/paymentsDialogNumberPicker"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        />  
</RelativeLayout>