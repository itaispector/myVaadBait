<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">
    <!-- the color here is just an example.
    I think the building code should come in a box design -->
    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/CreateBuildingScreenTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:src="@drawable/create_building_title" />

        <TextView
            android:id="@+id/redAsterisk5"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/CreateBuildingScreenTitle"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="*"
            android:textColor="#ff0000"
            android:textSize="20sp"
            android:textStyle="bold"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/CreateBuildingScreenBuildingCodeView"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/CreateBuildingScreenTitle"
            android:layout_marginTop="16dp"
            android:layout_toLeftOf="@id/redAsterisk5"
            android:background="@drawable/building_code_style"
            android:gravity="center"
            android:textSize="17sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/CreateBuildingScreenTitle"
            android:layout_marginTop="16dp"
            android:layout_toLeftOf="@id/redAsterisk5">

            <ImageView
                android:id="@+id/small_house_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/small_house_logo" />
        </RelativeLayout>

        <TextView
            android:id="@+id/redAsterisk"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/CreateBuildingScreenBuildingCodeView"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="*"
            android:textColor="#ff0000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <AutoCompleteTextView
            android:id="@+id/citys_text_view"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/CreateBuildingScreenBuildingCodeView"
            android:layout_marginTop="15dp"
            android:layout_toLeftOf="@id/redAsterisk"
            android:background="@drawable/edit_text_style"
            android:gravity="right|center_vertical"
            android:paddingLeft="8dp"
            android:paddingRight="8dp" />

        <TextView
            android:id="@+id/redAsterisk2"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/citys_text_view"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="*"
            android:textColor="#ff0000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/CreateBuildingScreenBuildingStreet"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_below="@+id/citys_text_view"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@id/redAsterisk2"
            android:background="@drawable/edit_text_style"
            android:hint="@string/street"
            android:inputType="textPersonName"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textSize="15sp"></EditText>

        <EditText
            android:id="@+id/CreateBuildingScreenBuildingNumber"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/citys_text_view"
            android:layout_marginRight="3dp"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@+id/CreateBuildingScreenBuildingStreet"
            android:background="@drawable/edit_text_style"
            android:hint="@string/home_number"
            android:inputType="number"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/redAsterisk3"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/CreateBuildingScreenBuildingStreet"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="*"
            android:textSize="20sp"
            android:textStyle="bold"
            android:visibility="invisible" />

        <EditText
            android:id="@+id/CreateBuildingScreenBuildingEntrance"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:layout_below="@id/CreateBuildingScreenBuildingStreet"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@id/redAsterisk3"
            android:background="@drawable/edit_text_style"
            android:hint="@string/home_number2"
            android:inputType="textPersonName"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textSize="15sp" />
        <EditText
            android:id="@+id/CreateBuildingScreenBuildingHouseNumbers"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:layout_below="@id/CreateBuildingScreenBuildingStreet"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@id/CreateBuildingScreenBuildingEntrance"
            android:layout_marginRight="3dp"
            android:background="@drawable/edit_text_style"
            android:hint="@string/numberOfHouses"
            android:inputType="textPersonName"
            android:gravity="center"
            android:textSize="15sp"
            android:clickable="true"/>

        <TextView
            android:id="@+id/redAsterisk4"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/CreateBuildingScreenBuildingEntrance"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="*"
            android:textSize="20sp"
            android:textStyle="bold"
            android:visibility="invisible" />

        <EditText
            android:id="@+id/CreateBuildingScreenPayPalAccount"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/CreateBuildingScreenBuildingEntrance"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@id/redAsterisk4"
            android:background="@drawable/edit_text_style"
            android:hint="@string/paypal_account"
            android:inputType="textEmailAddress"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textSize="15sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/CreateBuildingScreenBuildingEntrance"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/small_paypal_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/paypal_small_logo" />
        </RelativeLayout>

        <TextView
            android:id="@+id/redAsterisk6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/CreateBuildingScreenPayPalAccount"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="@string/must_fildes"
            android:textColor="#ff0000"
            android:textSize="15sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/CreateBuildingScreenCreateBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/redAsterisk6"
            android:layout_centerHorizontal="true"
            android:background="@drawable/add_building_btn"
            android:onClick="createBuilding" />
    </RelativeLayout>

</RelativeLayout>
