<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_login_screen"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:weightSum="44"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/MainLoginScreenLogo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="40dp"
        android:layout_weight="14"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/ic_launcher"
        android:contentDescription="@string/image_desc" />

    <EditText
        android:id="@+id/MainLoginScreenUserName"
        android:layout_width="match_parent"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:layout_marginTop="30dp"
        android:background="@drawable/login_screen_edit_text_style"
        android:hint="@string/username"
        android:inputType="textPersonName"
        android:textColorHint="#87006888"
        android:textColor="#006888"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:drawableRight="@drawable/user_icon"
        android:selectAllOnFocus="true"
        android:textSize="19sp" />

    <EditText
        android:id="@+id/MainLoginScreenPassword"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="30dp"
        android:layout_weight="1"
        android:background="@drawable/login_screen_edit_text_style"
        android:gravity="end|center_vertical"
        android:hint="@string/password"
        android:textColorHint="#87006888"
        android:textColor="#006888"
        android:inputType="textPassword"
        android:paddingLeft="8dp"
        android:drawableRight="@drawable/password_icon"
        android:paddingRight="8dp"
        android:selectAllOnFocus="true"
        android:textSize="19sp" />

    <TextView
        android:id="@+id/forgotPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="45dp"
        android:gravity="center"
        android:layout_weight="1"
        android:textColor="#fff"
        android:text="@string/forgot_password"
        android:textSize="15sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/MainLoginScreenLoginBtn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_weight="1"
        android:text="@string/login"
        android:textColor="#fff"
        android:background="@drawable/button_shape" />

    <Button
        android:id="@+id/MainLoginScreenSignUpBtn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginRight="40dp"
        android:layout_weight="1"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="70dp"
        android:text="@string/signup_btn"
        android:textColor="#fff"
        android:background="@drawable/button_shape" />

</LinearLayout>