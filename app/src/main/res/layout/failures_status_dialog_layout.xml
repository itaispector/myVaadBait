<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/list_item_background">

    <TextView
        android:id="@+id/failuresAddDialogTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/failuresAddDialogTitle"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/failuresAddDialogBusinessName"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/failuresAddDialogTitle"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_text_style"
        android:hint="@string/failuresAddDialogName"
        android:paddingLeft="8dp"
        android:paddingRight="8dp" />

    <EditText
        android:id="@+id/failuresAddDialogPrice"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/failuresAddDialogBusinessName"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_text_dialog_style"
        android:hint="הכנס סכום"
        android:paddingLeft="8dp"
        android:paddingRight="8dp" />

    <Button
        android:id="@+id/failuresAddDialogFailureOkBtn"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/failuresAddDialogPrice"
        android:layout_marginTop="10dp"
        android:onClick="DialogOk"
        android:text="אישור" />

    <Button
        android:id="@+id/failuresAddDialogFailureCancelBtn"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/failuresAddDialogPrice"
        android:layout_marginTop="10dp"
        android:onClick="DialogOk"
        android:text="ביטול" />


</RelativeLayout>
