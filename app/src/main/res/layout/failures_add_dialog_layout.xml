<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="ltr"
    android:background="@drawable/dialog_margin">

    <TextView
        android:id="@+id/failuresAddDialogTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:paddingRight="24dp"
        android:paddingTop="24dp"
        android:text="@string/failuresAddDialogTitle"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/failuresAddDialogBusinessName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/failuresAddDialogTitle"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="10dp"
        android:singleLine="true"
        android:hint="@string/failuresAddDialogName" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/failuresAddDialogPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/failuresAddDialogBusinessName"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="10dp"
        android:singleLine="true"
        android:inputType="number"
        android:hint="הכנס סכום" />

    <Button
        android:id="@+id/failuresAddDialogFailureOkBtn"
        android:layout_below="@+id/failuresAddDialogPrice"
        android:text="@string/add"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/default_button"
        android:enabled="false"
        android:gravity="center_vertical|left"
        android:paddingBottom="8dp"
        android:paddingLeft="24dp"
        android:paddingStart="24dp"
        android:paddingTop="8dp"
        android:textColor="@color/button_text_color"
        android:textSize="14sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/failuresAddDialogFailureOkBtn" />
</RelativeLayout>
