<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/content_framee"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/app_bar"
        android:background="@drawable/app_bg">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layoutDirection="ltr">

            <ImageView
                android:id="@+id/MainLoginScreenLogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:src="@drawable/main_logo" />

            <TextView
                android:id="@+id/NotInBuildingMSG3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/MainLoginScreenLogo"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="41dp"
                android:paddingLeft="2dp"
                android:text="@string/not_in_b_msg1"
                android:textColor="#000000"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/NotInBuildingMSG"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/MainLoginScreenLogo"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:text="@string/not_in_b_msg1"
                android:textColor="#ffff2f2f"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/NotInBuildingMSG2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/NotInBuildingMSG"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="@string/not_in_b_msg2"
                android:textColor="#000000"
                android:textSize="17sp" />

            <Button
                android:id="@+id/JoinBuildingBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/NotInBuildingMSG2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/join_building_btn" />

            <Button
                android:id="@+id/CreateBuildingBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/JoinBuildingBtn"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/add_building_btn" />

            <Button
                android:id="@+id/NotInBuildingLogout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:background="@android:color/transparent"
                android:drawableRight="@drawable/logout"
                android:text="@string/logoutActionBar"
                android:textColor="@android:color/white" />
        </RelativeLayout>
    </FrameLayout>
</RelativeLayout>