<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/list_item_background">

    <TextView
        android:id="@+id/paymentVaadBaitName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="check"
        android:textSize="25dp"
        android:textStyle="bold" />

    <SurfaceView
        android:id="@+id/paymnetVaadBaitDivider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/paymentVaadBaitName"
        android:background="#007ea6"
        android:paddingBottom="5dp"
        android:paddingTop="5dp" />

    <TextView
        android:id="@+id/paymentVaadBaitAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/paymnetVaadBaitDivider"
        android:text="1500"
        android:textSize="25dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/paypalVaadBaitPay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/paymentVaadBaitAmount"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/paypal_btn" />

</RelativeLayout>