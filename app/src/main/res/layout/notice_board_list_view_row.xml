<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/list_item_background"
    android:descendantFocusability="blocksDescendants">

    <ImageView
        android:id="@+id/noticeBoardRowUserImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:paddingLeft="10dp"
        android:src="@drawable/no_image" />

    <TextView
        android:id="@+id/noticeBoardRowFullName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/noticeBoardRowUserImage"
        android:layout_alignParentRight="true"
        android:paddingRight="10dp"
        android:text="TextView"
        android:textColor="#4F4F4F"
        android:textSize="15dp" />

    <SurfaceView
        android:id="@+id/noticeBoardRowDivider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/noticeBoardRowFullName"
        android:background="#007ea6"
        android:paddingBottom="5dp"
        android:paddingTop="5dp" />

    <TextView
        android:id="@+id/noticeBoardRowContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/noticeBoardRowDivider"
        android:textSize="20dp"
        android:textStyle="bold" />

    <SurfaceView
        android:id="@+id/noticeBoardRowDivider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/noticeBoardRowContent"
        android:background="#007ea6"
        android:paddingBottom="5dp"
        android:paddingTop="5dp" />

    <TextView
        android:id="@+id/noticeBoardRowDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/noticeBoardRowDivider2"
        android:text="10/9/85"
        android:textColor="#4F4F4F"
        android:textSize="10dp" />

</RelativeLayout>
