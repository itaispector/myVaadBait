<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/signupTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:src="@drawable/signup_title" />

        <EditText
            android:id="@+id/SignUpScreenFullName"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_below="@id/signupTitle"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:background="@drawable/edit_text_style"
            android:hint="@string/fullname"
            android:inputType="textPersonName"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/SignUpScreenEmail"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_below="@id/SignUpScreenFullName"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_text_style"
            android:hint="@string/email"
            android:inputType="textEmailAddress"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textSize="15sp" />

        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_below="@id/SignUpScreenEmail"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/userVerifyImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp" />
        </RelativeLayout>

        <EditText
            android:id="@+id/SignUpScreenUserName"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_below="@id/SignUpScreenEmail"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_text_style"
            android:hint="@string/username"
            android:inputType="textPersonName"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/SignUpScreenPassword"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_below="@id/SignUpScreenUserName"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_text_style"
            android:gravity="center_vertical"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:selectAllOnFocus="true"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/SignUpScreenPassword2"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_below="@id/SignUpScreenPassword"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_text_style"
            android:gravity="center_vertical"
            android:hint="@string/password2"
            android:inputType="textPassword"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:selectAllOnFocus="true"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/passwordVerifyText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/SignUpScreenPassword2"
            android:layout_marginTop="4dp"
            android:gravity="center_horizontal"
            android:textColor="#ff0000"
            android:textSize="14sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/chooseImgLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/passwordVerifyText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonLoadPicture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="6dp"
                android:layout_marginRight="10dp"
                android:text="@string/chooseImg" />

            <ImageView
                android:id="@+id/imgView"
                android:layout_width="100dp"
                android:layout_height="100dp" />

        </LinearLayout>

        <Button
            android:id="@+id/SignUpScreenSignUpBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/chooseImgLayout"
            android:layout_centerHorizontal="true"
            android:background="@drawable/signup_btn"
            android:onClick="signup" />
    </RelativeLayout>
</ScrollView>
