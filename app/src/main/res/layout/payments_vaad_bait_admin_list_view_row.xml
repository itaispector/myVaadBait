<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:layoutDirection="ltr"
    android:descendantFocusability="blocksDescendants">
    <!-- A CardView that contains a TextView -->
    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        card_view:cardCornerRadius="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <TextView
        android:id="@+id/paymentsVaadBaitAdminListViewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:padding="8dp"
        android:text="משפחת אבולעפיה"
        android:textColor="@color/colorPrimaryText"
        android:textSize="20sp" />

    <CheckBox
        android:id="@+id/paymentsVaadBaitAdminListViewCB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/paymentsVaadBaitAdminListViewPaidAll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/paymentsVaadBaitAdminListViewCB"
        android:layout_toRightOf="@id/paymentsVaadBaitAdminListViewCB"
        android:text="שולם הכל" />

    <RelativeLayout
        android:id="@+id/paymentsVaadBaitAdminListViewCBContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/paymentsVaadBaitAdminListViewName"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="5dp"
        android:visibility="gone">

        <CheckBox
            android:id="@+id/paymentsVaadBaitAdminListViewCB1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="1" />

        <CheckBox
            android:id="@+id/paymentsVaadBaitAdminListViewCB2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/paymentsVaadBaitAdminListViewCB1"
            android:text="2" />

        <CheckBox
            android:id="@+id/paymentsVaadBaitAdminListViewCB3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/paymentsVaadBaitAdminListViewCB2"
            android:text="3" />

        <CheckBox
            android:id="@+id/paymentsVaadBaitAdminListViewCB4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/paymentsVaadBaitAdminListViewCB3"
            android:text="4" />

        <CheckBox
            android:id="@+id/paymentsVaadBaitAdminListViewCB5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/paymentsVaadBaitAdminListViewCB1"
            android:text="5" />

        <CheckBox
            android:id="@+id/paymentsVaadBaitAdminListViewCB6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/paymentsVaadBaitAdminListViewCB1"
            android:layout_toLeftOf="@id/paymentsVaadBaitAdminListViewCB5"
            android:text="6" />

        <CheckBox
            android:id="@+id/paymentsVaadBaitAdminListViewCB7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/paymentsVaadBaitAdminListViewCB1"
            android:layout_toLeftOf="@id/paymentsVaadBaitAdminListViewCB6"
            android:text="7" />

        <CheckBox
            android:id="@+id/paymentsVaadBaitAdminListViewCB8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/paymentsVaadBaitAdminListViewCB1"
            android:layout_toLeftOf="@id/paymentsVaadBaitAdminListViewCB7"
            android:text="8" />

        <CheckBox
            android:id="@+id/paymentsVaadBaitAdminListViewCB9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/paymentsVaadBaitAdminListViewCB5"
            android:text="9" />

        <CheckBox
            android:id="@+id/paymentsVaadBaitAdminListViewCB10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/paymentsVaadBaitAdminListViewCB5"
            android:layout_toLeftOf="@id/paymentsVaadBaitAdminListViewCB9"
            android:text="10" />

        <CheckBox
            android:id="@+id/paymentsVaadBaitAdminListViewCB11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/paymentsVaadBaitAdminListViewCB5"
            android:layout_toLeftOf="@id/paymentsVaadBaitAdminListViewCB10"
            android:text="11" />

        <CheckBox
            android:id="@+id/paymentsVaadBaitAdminListViewCB12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/paymentsVaadBaitAdminListViewCB5"
            android:layout_toLeftOf="@id/paymentsVaadBaitAdminListViewCB11"
            android:text="12" />

    </RelativeLayout>
            </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>