<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:background="@android:color/white"
    android:descendantFocusability="blocksDescendants"
    android:layoutDirection="ltr">

    <ImageView
        android:id="@+id/usersRowUserImage"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:paddingBottom="10dp"
        android:paddingEnd="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:src="@drawable/no_image" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/usersRowUserImage"
        android:layout_toStartOf="@id/usersRowUserImage"
        android:gravity="end"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:weightSum="2">

        <TextView
            android:id="@+id/usersRowFullName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TextView"
            android:textColor="#4F4F4F"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/usersApartmentNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="16dp"
            android:text="דירה מספר"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:weightSum="2"
        >

        <ImageView
            android:id="@+id/usersRowDelBtn"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:contentDescription="מחק"
            android:padding="4dp"
            android:src="@drawable/remove_user"
            android:background="@drawable/default_button"/>

        <ImageView
            android:id="@+id/usersRowSendBtn"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:contentDescription="שלח הודעה"
            android:src="@drawable/send_msg"
            android:background="@drawable/default_button"/>


    </LinearLayout>
</RelativeLayout>