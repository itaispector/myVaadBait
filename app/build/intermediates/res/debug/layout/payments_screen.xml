<ViewFlipper 
    android:id="@+id/paymentsViewFlipper"
     xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:background="@drawable/background"
     android:animationCache="false"   
     android:inAnimation="@anim/anim_slide_in_left"
     android:outAnimation="@anim/anim_slide_out_right"
     >
<RelativeLayout 
    android:id="@+id/paymentsMainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"      
    >
       <Button 
           android:id="@+id/showVaadBaitPaymentsBtn"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:padding="15dp"
           android:layout_margin="5dp"
           android:text="תשלומי ועד"
           android:gravity="right"
            android:textSize="20dp"
            android:textStyle="bold"
           android:background="@drawable/list_item_background"/>
       
       <ListView
            android:id="@+id/PaymentsFamilyListView"
            android:layout_below="@id/showVaadBaitPaymentsBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="#00000000"           
            android:dividerHeight="10dp"            
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:smoothScrollbar="true"
            android:scrollingCache="false"
            android:animationCache="false"
            >
        </ListView>
        <ImageView
        android:id="@+id/add_payment_btnn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/add_payment_btn"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:visibility="gone"     
        />
</RelativeLayout>
<RelativeLayout 
    android:id="@+id/paymentsDayarLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
	<Button 
        android:id="@+id/goBackBtn3"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:onClick="back"
        android:background="@drawable/back_btn"
        />
    
    <ListView
        android:id="@+id/paymentsDayarVaadBaitListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:layout_below="@id/goBackBtn3"
        >
	</ListView>

    <Button
        android:id="@+id/paymentsDayarVaadBaitPayAllBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/goBackBtn3"
        android:layout_alignBottom="@+id/goBackBtn3"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/goBackBtn3"
        android:text="שלם הכל" />
    
</RelativeLayout>
<RelativeLayout 
    android:id="@+id/paymentsAdminVaadBaitLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <Button 
        android:id="@+id/goBackBtn2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:onClick="back"
        android:background="@drawable/back_btn"
        />
               <Button 
            android:id="@+id/paymentsAdminAddVBPayments"
            android:text="צור תשלומי ועד"
            android:layout_toRightOf="@id/goBackBtn2"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
        <Button 
	    android:id="@+id/paymentsAdminSendNotification2"
	    android:text="שלח התראה למי שלא שילם"
	    android:layout_toRightOf="@id/paymentsAdminAddVBPayments" 
	    android:layout_height="wrap_content"
	    android:layout_width="wrap_content"/>

        <ListView 
            android:id="@+id/paymentsAdminVaadBaitListView"
            android:layout_below="@id/goBackBtn2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            
        </ListView>
</RelativeLayout>
<RelativeLayout 
    android:id="@+id/paymentsAdminLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Button 
        android:id="@+id/goBackBtn"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:onClick="back"
        android:background="@drawable/back_btn"
        />
	<Button 
	    android:id="@+id/paymentsAdminSendNotification"
	    android:text="התראה"
	    android:layout_alignParentRight="true"
	    android:layout_height="wrap_content"
	    android:layout_width="wrap_content"/>
	<Button 
	    android:id="@+id/paymentsClosePaymentMoveToExpenses"
	    android:text="סגור והעבר"
	    android:layout_centerHorizontal="true"
	    android:layout_height="wrap_content"
	    android:layout_width="wrap_content"/>
	<ListView 
	    android:id="@+id/paymentsDayarimListView"
        android:layout_below="@id/goBackBtn"
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        android:choiceMode="multipleChoice"
        android:divider="#00000000"           
        android:dividerHeight="10dp"            
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:smoothScrollbar="true"
        android:scrollingCache="false"
        android:animationCache="false">
	</ListView>
    
</RelativeLayout>


<RelativeLayout 
    android:id="@+id/paymentsUserLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Button 
        android:id="@+id/backBtn"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:onClick="back"
        android:background="@drawable/back_btn"/>
	<RelativeLayout 
	    android:layout_width="wrap_content"
	    android:layout_height="200dp"
	    android:id="@+id/paymentsRegular"
	    android:background="@drawable/list_item_background"
	    android:layout_marginTop="100dp"
	    android:layout_marginBottom="100dp"
	    android:layout_marginLeft="10dp"
	    android:layout_marginRight="10dp"
	    android:layout_gravity="center_vertical"
	   	
	    >
	       <TextView 
	           android:id="@+id/paymentName"
	           android:layout_width="wrap_content"
	           android:layout_height="wrap_content"
	           android:textSize="25dp"
	           android:textStyle="bold"
	           android:layout_alignParentRight="true"
	           android:text="check"/>
	       <SurfaceView 
	        android:id="@+id/paymnetDivider"
	        android:layout_below="@id/paymentName"
	        android:layout_width="match_parent"
	        android:layout_height="1dp"
	        android:background="#007ea6"
	        android:paddingTop="5dp"
	        android:paddingBottom="5dp"/>
	       <TextView 
	           android:id="@+id/paymentAmount"
	           android:layout_below="@id/paymnetDivider"
	           android:layout_width="wrap_content"
	           android:layout_height="wrap_content"
	           android:textSize="25dp"
	           android:textStyle="bold"
	           android:layout_alignParentLeft="true"
	           android:text="1500"/>
	
	       <Button
	           android:id="@+id/paypalPay"
	           android:layout_width="216dp"
	           android:layout_height="60dp"
	           android:layout_alignParentBottom="true"
	           android:layout_centerHorizontal="true"
	           android:background="@drawable/paypal_btn"
			/>
	
	</RelativeLayout>

</RelativeLayout>


</ViewFlipper>
