<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main_login_screen">
    <ImageView
        android:id="@+id/MainLoginScreenLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/main_logo"/>
    <EditText
        android:id="@+id/MainLoginScreenUserName"
        android:layout_below="@id/MainLoginScreenLogo"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:textSize="19sp"
        android:layout_marginTop="30dp"
        android:paddingRight="8dp"
        android:paddingLeft="8dp"
        android:selectAllOnFocus="true"
        android:background="@drawable/edit_text_style"
        android:inputType="textPersonName"
        android:hint="@string/username"/>
    <EditText 
        android:id="@+id/MainLoginScreenPassword"
        android:layout_below="@id/MainLoginScreenUserName"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:textSize="19sp"
        android:layout_marginTop="30dp"
        android:paddingRight="8dp"
        android:selectAllOnFocus="true"
        android:paddingLeft="8dp"
        android:inputType="textPersonName"
        android:background="@drawable/edit_text_style"
        android:hint="@string/password"/>
    <TextView
        android:id="@+id/forgotPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_below="@id/MainLoginScreenPassword"
        android:text="@string/forgot_password"
        android:onClick="forgotPass"/>
	<Button
	    android:id="@+id/MainLoginScreenLoginBtn"
	    android:layout_below="@id/forgotPassword"
	    android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
	    android:layout_height="wrap_content"
        android:background="@drawable/login_btn"
        android:layout_centerHorizontal="true"
	    android:onClick="login"/>
    <Button
        android:id="@+id/MainLoginScreenSignUpBtn"
        android:layout_below="@id/MainLoginScreenLoginBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/signup_btn"
        android:layout_centerHorizontal="true"
        android:onClick="signup"/>

</RelativeLayout>
</ScrollView>
