<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/list_item_background"
    android:animateLayoutChanges="true"
    android:descendantFocusability="blocksDescendants" 
    >

        <TextView
            android:id="@+id/paymentsRowFamilyName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="שם תקלה"
            android:textSize="20dp"
            android:textStyle="bold"/>
		<TextView 
		    android:id="@+id/paymentsRowAmount"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:gravity="left"
		    android:text="\u20AA 268"
		    android:textSize="20dp"
		    android:layout_alignBottom="@id/paymentsRowFamilyName"
		    />
        <TextView
            android:id="@+id/paymentsRowDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/paymentsRowFamilyName"
            android:text="10/9/85"
            android:textColor="#4F4F4F"
            android:textSize="10dp" />

        
</RelativeLayout>
