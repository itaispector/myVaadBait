<RelativeLayout 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp" 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/list_item_background">
	       <TextView 
	           android:id="@+id/paymentVaadBaitName"
	           android:layout_width="wrap_content"
	           android:layout_height="wrap_content"
	           android:textSize="25dp"
	           android:textStyle="bold"
	           android:layout_alignParentRight="true"
	           android:text="check"/>
	       <SurfaceView 
	        android:id="@+id/paymnetVaadBaitDivider"
	        android:layout_below="@id/paymentVaadBaitName"
	        android:layout_width="match_parent"
	        android:layout_height="1dp"
	        android:background="#007ea6"
	        android:paddingTop="5dp"
	        android:paddingBottom="5dp"/>
	       <TextView 
	           android:id="@+id/paymentVaadBaitAmount"
	           android:layout_below="@id/paymnetVaadBaitDivider"
	           android:layout_width="wrap_content"
	           android:layout_height="wrap_content"
	           android:textSize="25dp"
	           android:textStyle="bold"
	           android:layout_alignParentLeft="true"
	           android:text="1500"/>
	
	       <Button
	           android:id="@+id/paypalVaadBaitPay"
	           android:layout_width="match_parent"
	           android:layout_height="wrap_content"
	           android:layout_centerHorizontal="true"
	           android:background="@drawable/paypal_btn"
	           android:layout_below="@id/paymentVaadBaitAmount"
	           android:layout_marginRight="50dp"
	           android:layout_marginLeft="50dp"
			/>

