<android.support.v4.widget.SwipeRefreshLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/swipe">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:paddingLeft="10dp"
    android:paddingTop="10dp"
    android:animateLayoutChanges="true">
    
		<RelativeLayout 
		    android:id="@+id/noticeBoardNamePicHolder"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
		    android:background="@drawable/list_item_background"
		    android:visibility="visible">
            
        
        <ImageView
        android:id="@+id/noticeBoardUserImage"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:paddingLeft="10dp"
        android:src="@drawable/no_image" />

        <TextView
            android:id="@+id/noticeBoardFamilyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/noticeBoardUserImage"
            android:paddingRight="0dp"
            android:text="משפחת חצרוני"
            android:textColor="#4F4F4F"
            android:textSize="15dp"/>
        
        <ImageView 
            android:id="@+id/noticeBoardDeleteAllNoticesBtn"
           	android:layout_width="wrap_content"
       		android:layout_height="wrap_content"
            android:background="@drawable/trash_btn"
            />
        <ImageView 
            android:id="@+id/noticeBoardRefreshBtn"
           	android:layout_width="wrap_content"
       		android:layout_height="wrap_content"
            android:background="@drawable/refresh"
            android:layout_toRightOf="@+id/noticeBoardDeleteAllNoticesBtn"
            
            
            />

        </RelativeLayout>
    <ImageView
        android:id="@+id/add_notice_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/add_notice"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"/>
    <ListView
        android:id="@+id/NoticeBoardListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"           
        android:layout_below="@id/noticeBoardNamePicHolder"
        android:divider="#00000000"           
        android:dividerHeight="10dp"
        android:animateLayoutChanges="true"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginRight="10dp"
        android:paddingTop="10dp"
        android:smoothScrollbar="true"
        android:scrollingCache="false"
        android:animationCache="false"
        >
    </ListView>

</RelativeLayout>
</android.support.v4.widget.SwipeRefreshLayout><!-- From: file:/C:/Users/Daniel/Desktop/AndroidStudio/myVaadBait/app/src/main/res/layout/notice_board_screen.xml -->