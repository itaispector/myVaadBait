<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">
<!-- the color here is just an example.
I think the building code should come in a box design -->
    <RelativeLayout
        android:layout_centerHorizontal="true"
        android:layout_width="300dp"
        android:layout_height="match_parent">
    <ImageView
        android:id="@+id/CreateBuildingScreenTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/create_building_title"/>
        <TextView
            android:id="@+id/redAsterisk5"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginTop="15dp"
            android:layout_below="@id/CreateBuildingScreenTitle"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:visibility="invisible"
            android:layout_marginLeft="5dp"
            android:textColor="#ff0000"
            android:text="*"/>
    <TextView
        android:id="@+id/CreateBuildingScreenBuildingCodeView"
        android:layout_width="match_parent"
        android:layout_toLeftOf="@id/redAsterisk5"
        android:layout_below="@id/CreateBuildingScreenTitle"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:textStyle="bold"
        android:textSize="17sp"
        android:gravity="center"
        android:background="@drawable/building_code_style"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_toLeftOf="@id/redAsterisk5"
            android:layout_below="@id/CreateBuildingScreenTitle"
            android:layout_marginTop="16dp">
            <ImageView
                android:id="@+id/small_house_logo"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content"
                android:src="@drawable/small_house_logo"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/redAsterisk"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:layout_below="@id/CreateBuildingScreenBuildingCodeView"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            android:textColor="#ff0000"
            android:text="*"/>
        <AutoCompleteTextView
            android:id="@+id/citys_text_view"
            android:layout_below="@id/CreateBuildingScreenBuildingCodeView"
            android:layout_toLeftOf="@id/redAsterisk"
            android:gravity="right|center_vertical"
            android:paddingRight="8dp"
            android:paddingLeft="8dp"
            android:layout_width="match_parent"
            android:layout_marginTop="15dp"
            android:layout_height="40dp"
            android:background="@drawable/edit_text_style"/>
    <TextView
        android:id="@+id/redAsterisk2"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/citys_text_view"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginLeft="5dp"
        android:textColor="#ff0000"
        android:text="*"/>
    <EditText
        android:id="@+id/CreateBuildingScreenBuildingStreet"
        android:layout_width="200dp"
        android:layout_toLeftOf="@id/redAsterisk2"
        android:layout_height="40dp"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        android:paddingRight="8dp"
        android:paddingLeft="8dp"
        android:inputType="textPersonName"
        android:background="@drawable/edit_text_style"
        android:layout_below="@+id/citys_text_view"
        android:hint="@string/street">
    </EditText>
    <EditText
        android:id="@+id/CreateBuildingScreenBuildingNumber"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        android:paddingRight="8dp"
        android:paddingLeft="8dp"
        android:layout_marginRight="3dp"
        android:inputType="number"
        android:layout_alignParentLeft="true"
        android:background="@drawable/edit_text_style"
        android:layout_below="@+id/citys_text_view"
        android:layout_toLeftOf="@+id/CreateBuildingScreenBuildingStreet"
        android:hint="@string/home_number"/>
        <TextView
            android:id="@+id/redAsterisk3"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/CreateBuildingScreenBuildingStreet"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:visibility="invisible"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            android:text="*"/>
    <EditText
        android:id="@+id/CreateBuildingScreenBuildingEntrance"
        android:layout_below="@id/CreateBuildingScreenBuildingStreet"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_toLeftOf="@id/redAsterisk3"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        android:paddingRight="8dp"
        android:paddingLeft="8dp"
        android:inputType="textPersonName"
        android:background="@drawable/edit_text_style"
        android:hint="@string/home_number2"/>

        <TextView
            android:id="@+id/redAsterisk4"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:layout_below="@id/CreateBuildingScreenBuildingEntrance"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:visibility="invisible"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            android:text="*"/>
    <EditText
        android:id="@+id/CreateBuildingScreenPayPalAccount"
        android:layout_below="@id/CreateBuildingScreenBuildingEntrance"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_toLeftOf="@id/redAsterisk4"
        android:layout_centerHorizontal="true"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        android:paddingRight="8dp"
        android:paddingLeft="8dp"
        android:inputType="textEmailAddress"
        android:background="@drawable/edit_text_style"
        android:hint="@string/paypal_account"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/CreateBuildingScreenBuildingEntrance"
            android:layout_marginTop="10dp">
            <ImageView
                android:id="@+id/small_paypal_logo"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                android:src="@drawable/paypal_small_logo"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/redAsterisk6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@id/CreateBuildingScreenPayPalAccount"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#ff0000"
            android:text="@string/must_fildes"/>
    <Button
        android:id="@+id/CreateBuildingScreenCreateBtn"
        android:layout_below="@id/redAsterisk6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/add_building_btn"
        android:layout_centerHorizontal="true"
        android:onClick="createBuilding"/>
    </RelativeLayout>

</RelativeLayout>
