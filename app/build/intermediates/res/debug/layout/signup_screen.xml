<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <ImageView
            android:id="@+id/signupTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/signup_title"
            android:layout_marginTop="15dp"
            android:layout_centerHorizontal="true"
            />
        <EditText
            android:id="@+id/SignUpScreenFullName"
            android:layout_below="@id/signupTitle"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:textSize="15sp"
            android:layout_marginTop="15dp"
            android:paddingRight="8dp"
            android:paddingLeft="8dp"
            android:inputType="textPersonName"
            android:background="@drawable/edit_text_style"
            android:hint="@string/fullname"/>
        <EditText
            android:id="@+id/SignUpScreenEmail"
            android:layout_below="@id/SignUpScreenFullName"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:paddingRight="8dp"
            android:paddingLeft="8dp"
            android:inputType="textEmailAddress"
            android:background="@drawable/edit_text_style"
            android:hint="@string/email"/>
        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_below="@id/SignUpScreenEmail"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp">
        <ImageView
            android:id="@+id/userVerifyImage"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content"/>
        </RelativeLayout>
        <EditText
            android:id="@+id/SignUpScreenUserName"
            android:layout_below="@id/SignUpScreenEmail"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:paddingRight="8dp"
            android:paddingLeft="8dp"
            android:inputType="textPersonName"
            android:background="@drawable/edit_text_style"
            android:hint="@string/username"/>
        <EditText
            android:id="@+id/SignUpScreenPassword"
            android:layout_below="@id/SignUpScreenUserName"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:paddingRight="8dp"
            android:paddingLeft="8dp"
            android:background="@drawable/edit_text_style"
            android:inputType="textPassword"
            android:selectAllOnFocus="true"
            android:hint="@string/password"
            android:gravity="center_vertical" />
        <EditText
            android:id="@+id/SignUpScreenPassword2"
            android:layout_below="@id/SignUpScreenPassword"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:paddingRight="8dp"
            android:paddingLeft="8dp"
            android:inputType="textPassword"
            android:selectAllOnFocus="true"
            android:background="@drawable/edit_text_style"
            android:gravity="center_vertical"
            android:hint="@string/password2"/>
        <TextView
            android:id="@+id/passwordVerifyText"
            android:layout_below="@id/SignUpScreenPassword2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textStyle="bold"
            android:textSize="14sp"
            android:gravity="center_horizontal"
            android:textColor="#ff0000"
            android:visibility="gone"/>
        <LinearLayout
            android:layout_centerHorizontal="true"
            android:id="@+id/chooseImgLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@id/passwordVerifyText"
            android:orientation="horizontal">
            <Button
                android:id="@+id/buttonLoadPicture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="6dp"
                android:text="@string/chooseImg"/>
            <ImageView
                android:id="@+id/imgView"
                android:layout_width="100dp"
                android:layout_height="100dp"/>

        </LinearLayout>

        <Button
            android:id="@+id/SignUpScreenSignUpBtn"
            android:layout_below="@id/chooseImgLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/signup_btn"
            android:layout_centerHorizontal="true"
            android:onClick="signup"/>
    </RelativeLayout>
</ScrollView>
